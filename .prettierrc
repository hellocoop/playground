{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte",
				"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"]
			}
		},
		{
			"files": "content/**/*.{css,html,js,svelte}",
			"options": {
				"requirePragma": true
			}
		}
	]
}
